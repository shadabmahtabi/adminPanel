            <span class="d-none d-md-block dropdown-toggle ps-2"></span>
          </a><!-- End Profile Iamge Icon -->

          <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile pt-0">
            <li>
              <a class="dropdown-item d-flex align-items-center" href="/">
                <i class="bi bi-box-arrow-right"></i>
                <span>Sign Out</span>
              </a>
            </li>

          </ul><!-- End Profile Dropdown Items -->
        </li><!-- End Profile Nav -->

      </ul>
    </nav><!-- End Icons Navigation -->

  </header><!-- End Header -->

  <!-- ======= Sidebar ======= -->
  <aside id="sidebar" class="sidebar">

    <ul class="sidebar-nav" id="sidebar-nav">

      <li class="nav-item">
        <a class="nav-link collapsed" href="/admin">
          <i class="bi bi-grid"></i>
          <span>Dashboard</span>
        </a>
      </li><!-- End Dashboard Nav -->


      <!-- End New recipe Nav -->





      <li class="nav-heading">Admin actions</li>
      <li class="nav-item">
        <a class="nav-link collapsed" href="/admin/staffs">
          <i class="bi bi-people-fill"></i>
          <span>All staff</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link collapsed" href="/admin/calendar">
          <i class="bi bi-calendar-date"></i>
          <span>Calendar</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link collapsed" href="/admin/messages">
          <i class="bi bi-envelope"></i>
          <span>Messages</span>
        </a>
      </li>

    </ul>

  </aside><!-- End Sidebar-->

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Staff profile</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Home</a></li>
          <li class="breadcrumb-item active">Staff profile</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section staff-profie-wrapper">
      <div class="card">
        <div class="card-body pt-4">
          <div class="row align-items-center">
            <div class="col-md-3">
              <div class="imageWrapper">
                <img src="<%= user.profilePic %>" alt="">
              </div>
              <!-- <div class="imageWrapper"><img src="https://i.pravatar.cc/300?img=16" alt=""></div> -->
            </div>

            <div class="col-md-9">
              <h2 class="mt-0"><b>
                  <%= user.name %>
                </b></h2>
              <h5><b>
                  <%= user.profession %>
                </b></h5>
              <hr>
              <div class="item">
                <b><i class="bi bi-hash"></i> Reference no.: </b> <span>1234</span>
              </div>
              <div class="item">
                <b><i class="bi bi-telephone"></i> Phone number: </b> <span>
                  <%= user.mobileNumber %>
                </span>
              </div>

              <div class="buttons my-4">
                <a href="#" class="btn btn-sm btn-pink"><i class="bi bi-envelope pe-1"></i> Email</a>
                <a href="#" class="btn btn-sm btn-blue"><i class="bi bi-envelope pe-1"></i> Message</a>
              </div>

              <div class="links">
                <a href="/admin/staff/account/<%= user._id %>" class="link">Account details</a>
              </div>
            </div>
          </div>
        </div>
      </div>


      <div class="card">
        <div class="card-body pt-4">
          <div class="row">
            <div class="col-md-4">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault1">
                <label class="form-check-label" for="flexCheckDefault1"> Upcoming recipe allocation (100) </label>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked>
                <label class="form-check-label" for="flexCheckDefault"> Previous recipe reviews (650) </label>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault2">
                <label class="form-check-label" for="flexCheckDefault2"> View flagged recipes (8) </label>
              </div>
            </div>
          </div>



          <div class="table-responsive mt-5">
            <table class="table" style="width:100%">
              <col width="10%">
              <col width="10%">
              <col width="">
              <col width="">
