                    <div>V2</div>
                    <div>V3</div>
                  </td>
                  <td>
                    <div>12/01/2023</div>
                    <div>12/01/2023</div>
                    <div>12/01/2023</div>
                  </td>
                  <td>
                    <div><i class="bi bi-check"></i></div>
                    <div><i class="bi bi-check"></i></div>
                    <div><i class="bi bi-check"></i></div>
                  </td>
                  <td>
                    <div>Y</div>
                    <div>N</div>
                    <div>N</div>
